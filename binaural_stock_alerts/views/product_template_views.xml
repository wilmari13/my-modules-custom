<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="product_template_form_view_inherit_stock_alert" model="ir.ui.view">
        <field name="name">product.template.form.inherit.stock.alert</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']//group[@name='operations']" position="after">
                <group string="Alertas de Inventario">
                    <field name="x_min_stock" string="Stock Mínimo Crítico"/>
                </group>
            </xpath>
        </field>
    </record>


     <record id="view_product_template_kanban_critical" model="ir.ui.view">
        <field name="name">product.template.kanban.critical</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <kanban default_group_by="categ_id" class="o_kanban_small_column" create="false">
                <field name="qty_available"/>
                <field name="x_min_stock"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click border-danger">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-danger">
                                    <strong>Stock: </strong> <field name="qty_available"/> / 
                                    <span class="text-muted"><field name="x_min_stock"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_product_critical_stock" model="ir.actions.act_window">
        <field name="name">Productos en Stock Crítico</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('x_is_critical', '=', True)]</field>
        <field name="context">{'group_by': 'categ_id'}</field>
        <field name="view_id" ref="view_product_template_kanban_critical"/>
    </record>

    <menuitem id="menu_product_critical" 
              name="Stock Crítico" 
              parent="stock.menu_stock_inventory_control" 
              action="action_product_critical_stock" 
              sequence="100"/>

</odoo>
