<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="kpi_margen_bruto" model="account.financial.kpi">
            <field name="name">Margen Bruto</field>
            <field name="formula">400000 - 600000</field>
            <field name="threshold_critical">0</field> 
            <field name="threshold_warning">50000</field>
        </record>

        <record id="kpi_liquidez" model="account.financial.kpi">
            <field name="name">Liquidez</field>
            <field name="formula">100000 / 400000 if 400000 != 0 else 0</field>
            <field name="threshold_critical">-1.0</field>
            <field name="threshold_warning">1.0</field>
        </record>

        <record id="kpi_disponibilidad_verde" model="account.financial.kpi">
            <field name="name">Disponibilidad</field>
            <field name="formula">101100 + 101400</field>
            <field name="threshold_critical">-1000</field>
            <field name="threshold_warning">-500</field>
        </record>
    </data>
</odoo>